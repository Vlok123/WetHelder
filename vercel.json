{
  "framework": "nextjs",
  "functions": {
    "app/api/ask/route.ts": {
      "maxDuration": 60
    },
    "app/api/ingest/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/ingest",
      "schedule": "0 3 * * *"
    }
  ],
  "env": {
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "SKIP_ENV_VALIDATION": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
    }
  },
  "github": {
    "silent": false
  }
} 