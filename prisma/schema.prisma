// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Query {
  id        String   @id @default(cuid())
  question  String
  answer    String
  sources   String   @default("") // JSON string of array
  createdAt DateTime @default(now())

  @@index([createdAt])
} 